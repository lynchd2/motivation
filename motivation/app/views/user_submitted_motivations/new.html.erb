<%= form_for @usm, html: {class: "form-horizontal center"} do |f| %>
<div class="submit-container">
<div class="container-fluid">
	<div class="form-group row">
			<%= f.label "Type of motivator:", class: "col-md-6" %>
		<div class="col-md-6">
			<%= f.select(:format, options_for_select([:Image, :Video]), {}, {class: "form-control"}) %>
		</div>
	</div>
	<div class="form-group row">
			<%= f.label "Enter the URL:", class: "col-md-6" %>
		<div class="col-md-6">
			<%= f.text_field(:url, class: "form-control") %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-6">
			<%= f.label "Category" %>
		</div>
	<% @collection =  [] %>
	<% @types.each do |type| %>
		<% @collection << type.split(/(?=[A-Z])/)[0]%>
	<% end  %>
		<div class="col-md-6">
	<%= f.select(:type_submitted, options_for_select(@collection.uniq), {}, {class: "form-control"}) %>
		</div>
	</div>
	<%= f.submit "Submit", class: "btn btn-default sign-in" %>
</div>
	<% end %>
</div>