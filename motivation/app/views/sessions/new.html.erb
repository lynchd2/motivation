<div class= "container-log-in">
	   <%= form_for(:session, url: login_path, html: {class: "form-horizontal"} ) do |f| %>
	   	  <div class= "center-signin">
		   	  <h1 class= "sign-up">Log In</h1>
		      <div class="form-group">
			     <%= f.label :email, class: "col-sm-3 control-label" %>
			  	 <div class="col-sm-9">
			  		<%= f.email_field :email, class: "form-control" %>
			  	</div>
			  </div>
			  <div class="form-group">
			  <%= f.label :password, class: "col-sm-3 control-label"  %>
			    <div class="col-sm-9">
					<%= f.password_field :password, class: "form-control" %>
				</div>
			  </div>
			</div>
		  	<div class="form-group">
		       <div class="col-sm-offset-2 col-sm-8">
			      <%= f.submit "Submit", class: "btn btn-default sign-in" %>
			   </div>
		    </div>
		<% end %>
	</div>
</div>