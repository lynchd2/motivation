<div class="container-image">
	<%= image_tag(@random_image.url, class: "image-display") %>
	
	<aside class="image-motivate-information-container">
			<% if @user %>
				<%= form_for([@user, @favorite]) do |f| %>
					<%= f.hidden_field :image_id, value: @random_image.id %>
					<%= f.hidden_field :url, value: @random_image.url %>
					<%= f.hidden_field :user_id, value: @user.id %>
					<%= f.submit "Make Favorite", class: "general-button favorite" %>
				<% end %>
				<%= @random_image.id %>
			<% else %>
				<%= button_to "Make Favorite", new_user_path, method: :get, class: "general-button favorite", params: {favorite_sign_in: true} %>
			<% end %>
	</aside>
	</div>
<div class= "container-image-show-buttons">
		<%= button_to "Back to the image categories", image_categories_path, method: :get, class: "general-button before-navigation left" %>
		<%= button_to "Give me more random motivation" , @path, method: :get, class: "general-button before-navigation right", params: {type: @random_video_or_image} %>
</div>